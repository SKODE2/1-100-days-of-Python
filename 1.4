def print_color_per_letter():
    yellow = ["a", "e"]
    red = ["t", "h", "m", "r", "w", "z"]
    blue = ["i", "o", "u"]
    string = """
// Hello Lovely World !! //

The most important thing is 
to enjoy your life 
- to be happy 
- it's all that matters.    

Your time is limited, 
don't waste it living 
someone else's life
"""
    for letter in string:
        if letter.isalpha():
            if letter.lower() in yellow:
                print('\033[1;33m' + letter, end=' ')
            elif letter.lower() in red:
                print('\033[1;31m' + letter, end=' ')
            elif letter.lower() in blue:
                print('\033[1;34m' + letter, end=' ')
            else:
                print(letter, end=' ')
        else:
            print(letter, end=' ')

    print('\033[0m')  # Reset the color at the end

